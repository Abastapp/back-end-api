{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "ES6",
      "ES2021",
      "DOM"
    ],
    "types": [
      "node",
      "jest",
      "reflect-metadata"
    ],
    "allowJs": true,
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@domain/*": [
        "./src/domain/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@factories/*": [
        "./tests/factories/*"
      ],
      "@stubs/*": [
        "./tests/stubs/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "dev-infra.ts",
    "jest.integration.setup.ts",
    "integration.jest.setup.ts",
    "integration.jest.teardown.ts",
    "jest.setup.ts"
  ]
}
